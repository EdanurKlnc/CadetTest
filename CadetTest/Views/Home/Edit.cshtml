@model CadetTest.Entities.Consent

@{
    Layout = "_Layout";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        .row{
           margin-left:auto;
           margin-right:auto;
           background-color:cadetblue;
           border-radius:10px;

        }
        label{
            font-family:'Times New Roman', Times, serif;
            font-size:20px
        }
    </style>
</head>
<body>

    <h4>Consent</h4>
    <hr />
    <div class="row col-md-6">
        <div class="col-md-9" style="margin:auto">
            <form asp-action="Edit" method="post" style="margin:auto">
                <input type="hidden" name="Id" />
                <div class="form-group">
                    <label class="control-label"></label>
                    <br />
                    @Html.TextBoxFor(x=> x.Id)
                </div>
                <div class="form-group">
                    <label class="control-label">Type</label>
                    <br />
                    @Html.TextBoxFor(x=> x.Type)
                </div>
                <div class="form-group">
                    <label class="control-label">Recipient</label>
                    <br />
                    @Html.TextBoxFor(x=> x.Recipient)
                </div>
                <div class="form-group">
                    <label class="control-label">Status</label>
                    <br />
                    @Html.TextBoxFor(x=> x.Status)
                </div>
                <div class="form-group">
                    <label class="control-label">RecipientType</label>
                    <br />
                    @Html.TextBoxFor(x=> x.RecipientType)
                </div>
                <div class="form-group">
                    <input type="submit" value="GÜNCELLE" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="/Home/ConsentsIndex" >Listeye Geri Dön</a>
    </div>

</body>
</html>
